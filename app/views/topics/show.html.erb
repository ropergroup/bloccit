<h1><%= @topic.name %></h1>

   <% if user_is_authorized_for_topics? %>
      <%= link_to "Edit Topic", edit_topic_path, class: 'btn btn-success' %>
      <%= link_to "Delete Topic", @topic, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this topic?' } %>
   <% end %>

      <div class="row">
      <div class="col-md-8">
         <p class="lead">
          <%= render partial: "labels/list", locals: { labels: @topic.labels } %>
          <br />
          <%= @topic.description %>
        </p>

      <div>
         <h3>Comments</h3>
         <% @topic.comments.each do |comment| %>
         <%= render partial: 'comments/comment', locals: { topic: @topic, comment: comment } %>
         <% end %>
      </div>

         <% if current_user %>
         <%= render 'comments/form', comment: Comment.new, topic: @topic %>
         <% end %>


   <% @topic.posts.each do |post| %>
      <div class="media">
         <div class="media-body">
            <h4 class="media-heading">
               <%= link_to post.title, topic_post_path(@topic, post) %>
               <%= render partial: "labels/list", locals: { labels: post.labels } %>
            </h4>
            <small>
               submitted <%= time_ago_in_words(post.created_at) %> ago by <%= post.user.name %> <br>
               <%= post.comments.count %> Comments
            </small>
         </div>
      </div>
   <% end %>

   </div>
   <% if current_user %>
      <div class="col-md-4">
         <%= link_to "New Post", new_topic_post_path(@topic), class: 'btn btn-success' %>
      </div>
   <% end %>
   </div>
